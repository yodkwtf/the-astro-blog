---
const user = {
  name: 'John',
  age: 25,
};

const listItems = ['item1', 'item2', 'item3'];
const listItemClass = 'list-item';
const isVisible = true;
---

<!--# markup -->
<>
  <h1>Hello {user.name}!</h1>

  <ul>
    {listItems.map((item) => <li class={listItemClass}>{item}</li>)}
  </ul>

  {isVisible && <p>Visible</p>}

  {isVisible ? <p>I am Visible</p> : <p>I am not visible</p>}
</>

<!--# styles -->
<style>
  h1 {
    color: red;
  }

  .list-item {
    color: purple;
  }
</style>
