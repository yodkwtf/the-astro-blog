---
export interface Props {
  card: {
    title: string;
    description: string;
    dark?: boolean;
  };
}

const {
  card: { title, description, dark = false },
} = Astro.props as Props;
---

<div class={`card ${dark && 'dark'}`}>
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }

  .dark {
    background: #222;
    color: #fff;
  }
</style>
